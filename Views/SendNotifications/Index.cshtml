@model OrchardCore.Notifications.ViewModels.SendNotificationViewModel

<h1>@RenderTitleSegments(T["Send Notification"])</h1>

<form asp-action="Index" asp-controller="Admin" asp-area="OrchardCore.Email" method="post">
    @Html.ValidationSummary()

    @* <div class="form-group">
        <div class="form-group" asp-validation-class-for="To">
            <label asp-for="To">@T["To"]</label>
            <input asp-for="To" class="form-control" type="text" />
            <span asp-validation-for="To"></span>
        </div>
    </div> *@

    
    <div class="form-group">
        <div class="form-group" asp-validation-class-for="Sender">
            <label asp-for="Sender">@T["From"]</label>
            <input asp-for="Sender" class="form-control" type="text" />
            <span asp-validation-for="Sender"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group" asp-validation-class-for="Bcc">
            <label asp-for="Bcc">@T["Bcc"]</label>
            <input asp-for="Bcc" class="form-control" type="text" />
            <span asp-validation-for="Bcc"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group" asp-validation-class-for="Cc">
            <label asp-for="Cc">@T["Cc"]</label>
            <input asp-for="Cc" class="form-control" type="text" />
            <span asp-validation-for="Cc"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group" asp-validation-class-for="Subject">
            <label asp-for="Subject">@T["Subject"]</label>
            <input asp-for="Subject" class="form-control" type="text" required />
            <span asp-validation-for="Subject"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group" asp-validation-class-for="Body">
            <label asp-for="Body">@T["Body"]</label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Body"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" id="emailtestsend" class="button grey">@T["Send"]</button>
    </div>
</form>
